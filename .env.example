# متغيرات البيئة - Environment Variables
# Environment File Template

# ============================================
# Supabase Configuration
# ============================================

# عنوان مشروع Supabase
# يمكنك الحصول عليه من: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-id.supabase.co

# المفتاح العام (Anon Key)
# يمكنك الحصول عليه من: Supabase Dashboard > Settings > API
SUPABASE_ANON_KEY=your-anon-key-here

# المفتاح الخاص (Service Role Key) - للاستخدام من الخادم فقط
# لا تشاركه في التطبيق الأمامي (Frontend)
SUPABASE_SERVICE_KEY=your-service-key-here

# ============================================
# تكوين التطبيق
# ============================================

# اسم التطبيق
APP_NAME=دليل أطباء الفيوم

# إصدار التطبيق
APP_VERSION=1.0.0

# بيئة التشغيل (development, staging, production)
APP_ENV=development

# ============================================
# إعدادات البريد الإلكتروني
# ============================================

# عنوان البريد الذي سيرسل الرسائل
MAIL_FROM_EMAIL=noreply@fayoumdoctors.com

# اسم المُرسل
MAIL_FROM_NAME=دليل أطباء الفيوم

# ============================================
# إعدادات الحماية
# ============================================

# هل يتم فرض استخدام HTTPS
FORCE_HTTPS=true

# وقت انتهاء صلاحية الجلسة (بالدقائق)
SESSION_TIMEOUT=1440

# ============================================
# معلومات الشركة
# ============================================

# اسم الشركة
COMPANY_NAME=فايوم للخدمات الطبية

# رقم الهاتف
COMPANY_PHONE=+20XXXXXXXXX

# البريد الإلكتروني
COMPANY_EMAIL=info@fayoumdoctors.com

# العنوان
COMPANY_ADDRESS=الفيوم، مصر

# ============================================
# إعدادات التسجيل
# ============================================

# مستوى التسجيل (log, error, warning, info, debug)
LOG_LEVEL=info

# حفظ السجلات في ملف
ENABLE_FILE_LOGGING=true

# ============================================
# ملاحظات مهمة
# ============================================
# 1. استنسخ هذا الملف وأعد تسميته إلى .env
# 2. أضف البيانات الفعلية بدلاً من المعايير
# 3. لا تشارك ملف .env على GitHub
# 4. أضف .env إلى .gitignore
# 5. في الإنتاج، استخدم متغيرات البيئة من النظام
